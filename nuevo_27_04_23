# Lista 

# 1
print("Lista \n")
import random
lista=[]  
num=()
print("Ingrese cuantos números aleatorios desea obtener")
n=int(input())
lista=[random.randint(0,10)for _ in range(n)]
# Rempalozo de número por -1

# 2
print("La lista aleatoria queda", lista)
num_1=int(input("\nIngrese un número para remplazar en la lista por (-1): "))

for i in range(len(lista)):
    if lista[i]==num_1:
        lista[i]=-1

print("La lista con el número reemplazado es:", lista)

# Leer un numero a eliminar 

# 3
print("\nEliminar un número \n")
print("La lista aleatoria queda", lista)

lista.sort(reverse=True)

numElim=int(input("Ingresar el número que decea eliminar de la lista: "))

if numElim in lista:
    lista.remove(numElim)
    print("El número fue eliminado de la lista.")
else:
    print("El número no está presente en la lista.")

print("La lista con el número reemplazado es:", lista)

# Leer un numero y ponerlo en la lista

