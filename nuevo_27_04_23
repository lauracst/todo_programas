# 4 
# Orden de menor a mayor
print("\nOrdenar la lista de menor a mayor \n")
print("La lista aleatoria queda", lista)

print("La lista aleatoria queda", lista)

lista.sort()

print("La lista ordenada de menor a mayor es:", lista)

# Orden de mayor a menor 
print("\nOrdenar la lista de mayor a menor \n")
print("La lista aleatoria queda", lista)

print(lista)

lista.sort(reverse=True)

print("La lista ordenada de mayor a menor es:", lista)

# Leer un numero imprir cuanntas veces se repite 

# 5 
print(lista)

print("Cuantas veces se repite un número\n")

numReo=int(input("Digite el número que decea buscar: "))

veces=lista.count(numReo)

print("El número se respite ", veces )

